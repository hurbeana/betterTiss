<% if current_user %>
  <% unless favorite?(tiss_id) %>
    <%= link_to "favorite", {controller: controller_name, action: 'favorite',
                             tiss_id: tiss_id, type: 'favorite'}, method: :put %>
  <% else %>
    <%= link_to "unfavorite", {controller: controller_name, action: 'favorite',
                               tiss_id: tiss_id, type: 'unfavorite'}, method: :put %>
  <% end %>
<% end %>
