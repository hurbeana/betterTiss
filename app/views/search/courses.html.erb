<% provide :subject, "Courses" %>
<%= render 'search', get_path: search_courses_path %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @response %>
      <% @response.parsed_response["results"].each do |r| %>
        <div class="card">
          <div class="card-body">
            <h3 class="card-title"><%= r["title"] %></h3>
            <%= raw r["short"]&.html_safe %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
