<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <div class="flexRow">
    <div class="flexCol">
      <%= f.label :email, class: 'flexCont' %>
      <%= f.label :password, class: 'flexCont' %>
    </div>

    <div class="flexCol">
      <%= f.email_field :email, class: 'form-control, flexCont' %>
      <%= f.password_field :password, class: 'form-control, flexCont' %>
    </div>

  </div>

  <div>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
  </div>

  <%= f.submit "Log in", class: "btn btn-primary mySubmit" %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>

<% end %>